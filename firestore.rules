rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Usu치rios s칩 podem ler/escrever em seu pr칩prio documento
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }

    // Acesso baseado no 'secretariaId' do usu치rio
    match /{collection}/{docId} {
      allow read, write, delete: if request.auth.token.secretariaId == resource.data.secretariaId;
      allow create: if request.auth.token.secretariaId == request.resource.data.secretariaId;
    }
  }
}